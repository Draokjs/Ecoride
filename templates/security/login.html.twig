{% extends 'base.html.twig' %}

{% block title %}Ecoride login page{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}
<main>
    <div class="connexionForm">
        <div class="container">
            <div class="col-12 text-center mt-4">
                <h1>Connexion</h1>

                <div class="col mt-3">
                    <form method="post" action="{{ path('app_login') }}">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" name="_username" id="email" value="{{ last_username }}" class="form-control" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" required>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3 fs-5">Se connecter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

{% block javascripts %}
   {{ encore_entry_script_tags('app') }}
{% endblock %}

{% endblock %}
